<!--
    This is the master schema to be shared with other sections
    It will add a background image and color to the section
    It also allows you to control the spacing of the block

    example use:

    <section
        class="section section--{{ section.id }} section--full-bg section-bg-color section-padding-tb section-margin-tb"


        {%- liquid
            render 'jd-section-spacing-and-images', section: section
        -%}

        <div
            class="container container--{{ section.settings.container_size }} ">

            ...


    Features:
        Adjust max-width: classes must be applied like in sections/home-custom
            @todo add implemention notes (used in core-culture)
        Add padding and margin

        Add background color
        Add background image

 -->

{% schema %}

{
    "name": "Master Schema",
    "settings": [
        {
            "type": "header",
            "content": "JD Theme Dev"
        }, {
            "type": "header",
            "content": "Section Spacing"
        }, {
            "type": "select",
            "id": "container_size",
            "label": "Max Width",
            "options": "options": [
                {
                    "value": "tiny",
                    "label": "Tiny"
                }, {
                    "value": "small",
                    "label": "Small"
                }, {
                    "value": "medium",
                    "label": "Medium"
                }, {
                    "value": "large",
                    "label": "Large"
                }, {
                    "value": "xlarge",
                    "label": "xLarge"
                }, {
                    "value": "full",
                    "label": "Full"
                }
            ],
            "default": "large"
        }, {
            "type": "number",
            "id": "padding_top",
            "label": "Content top padding(px)",
            "default": 0
        }, {
            "type": "number",
            "id": "padding_bottom",
            "label": "Content bottom padding(px)",
            "default": 0
        }, {
            "type": "number",
            "id": "margin_top",
            "label": "Section top margin (px)",
            "default": 0
        }, {
            "type": "number",
            "id": "margin_bottom",
            "label": "Section bottom margin (px)",
            "default": 0
        }, {
            "type": "header",
            "content": "Section Color/Image"
        }, {
            "type": "color",
            "id": "text_color",
            "label": "Section text color"
        }, {
            "type": "color",
            "id": "background_color",
            "label": "Section background color"
        }, {
            "type": "image_picker",
            "id": "background_image",
            "label": "Section background image"
        }, {
            "type": "select",
            "id": "background_fit",
            "label": "Background image fit",
            "options": [
                {
                    "value": "cover",
                    "label": "Cover"
                }, {
                    "value": "contain",
                    "label": "Contain"
                }
            ],
            "default": "cover"
        }, {
            "type": "select",
            "id": "background_position",
            "label": "Background image position",
            "options": [
                {
                    "value": "top",
                    "label": "Top"
                }, {
                    "value": "center",
                    "label": "Center"
                }, {
                    "value": "bottom",
                    "label": "Bottom"
                }
            ],
            "default": "center"
        }, {
            "type": "range",
            "id": "background_overlay_intensity",
            "label": "Background image overlay intensity",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 10
        }, {
            "type": "color",
            "id": "background_overlay_color",
            "label": "Background image overlay color",
            "default": "#000000"
        }, {
            "type": "checkbox",
            "id": "reverse_on_mobile",
            "label": "Reverse on mobile",
            "default": false
        }, {
            "type": "header",
            "content": "END JD Theme Dev"
        }
    ]
}

{% endschema %}
